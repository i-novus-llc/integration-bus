<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="registry" name="registry">
    <list>
        <sql>
            SELECT :select
            FROM integration.participant
            WHERE :filters
            ORDER BY :sorting
            LIMIT :limit OFFSET :offset
        </sql>
    </list>
    <count count-mapping="[0]['cnt']">
        <sql>
            SELECT count(*) as cnt
            FROM integration.participant
            WHERE :filters
        </sql>
    </count>

    <fields>
        <field id="id" domain="string">
            <select mapping="['code']"/>
            <filters>
                <eq filter-id="id">(upper(code) like '%'||upper(:id)||'%')</eq>
            </filters>
        </field>

        <field id="name" domain="string">
            <select/>
            <filters>
                <eq filter-id="name">(upper(:expression) like '%'||upper(:name)||'%')</eq>
            </filters>
        </field>

        <field id="disable" domain="string">
            <select/>
        </field>

        <field id="disable_select.id" domain="integer">
            <filters>
                <eq filter-id="disable_select.id">
                    (case when :disable_select.id = 2 then (disable is false or disable is null)
                    when :disable_select.id = 1 then disable is true end)
                </eq>
            </filters>
        </field>

    </fields>
</query>
