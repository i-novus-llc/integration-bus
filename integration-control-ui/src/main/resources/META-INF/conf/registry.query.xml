<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>registry</object-id>
    <name>registry</name>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from integration.participant r
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(r)
                from integration.participant r
                where :where
            </n2o:count-query>
            <n2o:alias>r</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>string</domain>
            <display/>
            <expression>code</expression>
            <filters>
                <filter type="eq" filter-field="id">code=:id</filter>
            </filters>
        </field>

        <field>
            <id>name</id>
            <domain>string</domain>
            <display/>
            <filters>
                <filter type="eq" filter-field="uid">(upper(:expression) like '%'||upper(:name)||'%')</filter>
            </filters>
        </field>

        <field>
            <id>disable</id>
            <domain>boolean</domain>
            <display/>
        </field>

        <field>
            <id>disable_select.id</id>
            <domain>integer</domain>
            <filters>
                <filter type="eq" filter-field="disable_select.id">
                    (case when :disable_select.id = 2 then (disable is false or disable is null)
                    when :disable_select.id = 1 then disable is true end)
                </filter>
            </filters>
        </field>

    </fields>
</query>
