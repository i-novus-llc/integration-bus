<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-3.0">
    <object-id>registry</object-id>
    <layout>n2o/layout/single</layout>
    <name> </name>

    <regions>
        <region place="single" type="list">
            <container id="main">
                <wgt:table>
                    <wgt:name>Системы</wgt:name>
                    <wgt:query-id>registry</wgt:query-id>
                    <wgt:action-menu>
                        <wgt:menu-item id="createParticipant" label="Создать" context="false">
                            <wgt:event>
                                <wgt:show-modal page-id="registry_form" action-id="createParticipant" refresh-after-submit="true"/>
                            </wgt:event>
                        </wgt:menu-item>
                        <wgt:menu-item id="updateParticipant" label="Изменить">
                            <wgt:event>
                                <wgt:show-modal page-id="registry_form" action-id="updateParticipant" refresh-after-submit="true"/>
                            </wgt:event>
                        </wgt:menu-item>
                        <wgt:menu-item id="deleteParticipant" label="Удалить">
                            <wgt:event>
                                <wgt:invoke-action action-id="deleteParticipant"/>
                            </wgt:event>
                        </wgt:menu-item>
                    </wgt:action-menu>
                    <wgt:columns>
                        <wgt:column column-field-id="id" name="Код системы"/>
                        <wgt:column column-field-id="name" name="Наименование системы"/>
                        <wgt:column column-field-id="disable" name="Приостановлена">
                            <wgt:checkbox/>
                        </wgt:column>
                    </wgt:columns>
                    <wgt:filters opened="true">
                        <ctrl:input-text id="id" label="Код системы"/>
                        <ctrl:input-text id="name" label="Наименование системы"/>
                        <ctrl:checkbox id="disable" label="Приостановлена" default-value="false"/>
                    </wgt:filters>
                </wgt:table>
            </container>

            <container id="method" depends-on="main">
                <wgt:table master-field-id="id" detail-field-id="participant_code">
                    <wgt:name>Код сервиса (операции)</wgt:name>
                    <wgt:query-id>method</wgt:query-id>
                    <wgt:action-menu>
                        <wgt:menu-item id="createMethod" label="Создать" context="false">
                            <wgt:event>
                                <wgt:show-modal page-id="method" action-id="createMethod"
                                                master-field-id="participant_code" detail-field-id="participant_code"
                                                refresh-after-submit="true"/>
                            </wgt:event>
                        </wgt:menu-item>
                        <wgt:menu-item id="updateMethod" label="Изменить">
                            <wgt:event>
                                <wgt:show-modal page-id="method" action-id="updateMethod" refresh-after-submit="true"/>
                            </wgt:event>
                        </wgt:menu-item>
                        <wgt:menu-item id="deleteMethod" label="Удалить">
                            <wgt:event>
                                <wgt:invoke-action action-id="deleteMethod"/>
                            </wgt:event>
                        </wgt:menu-item>
                        <wgt:menu-item id="permission" label="Доступы">
                            <wgt:event>
                                <wgt:show-modal page-id="permission" master-field-id="id"
                                                detail-field-id="participant_method_id" refresh-after-submit="true"/>
                            </wgt:event>
                        </wgt:menu-item>
                    </wgt:action-menu>
                    <wgt:columns>
                        <wgt:column column-field-id="method_code" name="Наименование сервиса"/>
                        <wgt:column column-field-id="url" name="URL сервиса"/>
                        <wgt:column column-field-id="disable" name="Приостановлен">
                            <wgt:checkbox/>
                        </wgt:column>
                    </wgt:columns>
                </wgt:table>
            </container>
        </region>
    </regions>

</page>
