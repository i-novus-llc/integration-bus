<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="registry" name="registry">
    <list>
        <sql>
            SELECT :select
            FROM integration.participant_permission
            WHERE :filters
            ORDER BY :sorting
            LIMIT :limit OFFSET :offset
        </sql>
    </list>
    <count count-mapping="[0]['cnt']">
        <sql>
            SELECT count(*) as cnt
            FROM integration.participant_permission
            WHERE :filters
        </sql>
    </count>

    <fields>
        <field id="id" domain="integer">
            <select/>
            <filters>
                <eq filter-id="id">id=:id</eq>
            </filters>
        </field>

        <field id="participant_method_id" domain="integer">
            <select/>
            <filters>
                <eq filter-id="participant_method_id">participant_method_id=:participant_method_id</eq>
            </filters>
        </field>

        <field id="participant.id" domain="string">
            <select mapping="['participant_code']"/>
        </field>

        <field id="callback_url" domain="string">
            <select/>
        </field>

        <field id="sync" domain="boolean">
            <select/>
        </field>

    </fields>
</query>

