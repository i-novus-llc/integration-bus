<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="registry" name="registry">
    <list>
        <sql>
            SELECT :select
            FROM integration.participant_method
            WHERE :filters
            ORDER BY :sorting
            LIMIT :limit OFFSET :offset
        </sql>
    </list>
    <count count-mapping="[0]['cnt']">
        <sql>
            SELECT count(*) AS cnt
            FROM integration.participant_method
            WHERE :filters
        </sql>
    </count>

    <fields>
        <field id="id" domain="integer">
            <select/>
            <filters>
                <eq filter-id="id">id=:id</eq>
            </filters>
        </field>

        <field id="participant_code" domain="string">
            <select/>
            <filters>
                <eq filter-id="participant_code">participant_code=:participant_code</eq>
            </filters>
        </field>

        <field id="method_code" domain="string">
            <select/>
        </field>

        <field id="url" domain="string">
            <select/>
        </field>

        <field id="disable" domain="boolean">
            <select/>
        </field>

    </fields>
</query>

