<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-3.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <object-id>monitoring</object-id>
    <layout>n2o/layout/single</layout>
    <name> </name>

    <regions>
        <region place="single" type="none">
            <container id="main">
                <wgt:table>
                    <wgt:query-id>monitoring</wgt:query-id>
                    <wgt:columns>
                        <wgt:column column-field-id="uid" name="Идентификатор сообщения"/>
                        <wgt:column column-field-id="date_time_text" name="Дата\Время"/>
                        <wgt:column column-field-id="sender" name="Отправитель"/>
                        <wgt:column column-field-id="receiver" name="Получатель"/>
                        <wgt:column column-field-id="operation" name="Действие"/>
                        <wgt:column column-field-id="status.name" name="Статус"/>
                        <wgt:column column-field-id="comment" name="Комментарий"/>
                        <wgt:column column-field-id="error" name="Ошибка"/>
                    </wgt:columns>
                    <wgt:filters opened="true">
                        <ctrl:input-text id="uid" label="Идентификатор"/>
                        <ctrl:date-interval id="date_time" label="Дата\Время" format="DD.MM.YYYY HH:mm" control-style="width:300px">
                            <ctrl:default-model begin="`moment().set({hour:0,minute:0}).format('DD.MM.YYYY HH:mm')`"
                                                end="`moment().set({hour:23,minute:59}).format('DD.MM.YYYY HH:mm')`"/>
                        </ctrl:date-interval>
                        <ctrl:input-text id="sender" label="Отправитель"/>
                        <ctrl:input-text id="receiver" label="Получатель"/>
                        <ctrl:input-text id="operation" label="Действие"/>
                        <ctrl:select id="status" label="Статус">
                            <ctrl:options>
                                <ctrl:option>{"id":1, "name":"Создан"}</ctrl:option>
                                <ctrl:option>{"id":2, "name":"Ошибка"}</ctrl:option>
                                <ctrl:option>{"id":3, "name":"В очереди"}</ctrl:option>
                                <ctrl:option>{"id":4, "name":"Удачно"}</ctrl:option>
                            </ctrl:options>
                        </ctrl:select>
                        <ctrl:input-text id="comment" label="Комментарий"/>
                    </wgt:filters>
                </wgt:table>
            </container>
        </region>
    </regions>

</page>
