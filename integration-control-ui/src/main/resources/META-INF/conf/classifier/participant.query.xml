<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>registry</object-id>
    <name>group_code</name>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from integration.participant a
                where (a.disable = false or a.disable is null) and :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(a)
                from integration.participant a
                where (a.disable = false or a.disable is null) and :where
            </n2o:count-query>
            <n2o:alias>a</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>string</domain>
            <display/>
            <expression>code</expression>
            <filters auto-generate="true"/>
        </field>

        <field>
            <id>name</id>
            <domain>string</domain>
            <display/>
            <expression>code || ' ' || name</expression>
            <filters>
                <filter type="eq" filter-field="name">(upper(:expression) like '%'||upper(:name)||'%')</filter>
            </filters>
        </field>

        <field>
            <id>participant_method_id</id>
            <domain>integer</domain>
            <filters>
                <filter type="eq" filter-field="participant_method_id">
                    ((select id from integration.participant_permission pp
                    where pp.participant_code = code and pp.participant_method_id = :participant_method_id) is null
                    and (select participant_code from integration.participant_method where id = :participant_method_id) != code)
                </filter>
            </filters>
        </field>

    </fields>
</query>
