<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="registry" name="group_code">
    <list>
        <sql>
            SELECT :select
            FROM integration.integration_type
            WHERE :filters
            ORDER BY :sorting
            LIMIT :limit OFFSET :offset
        </sql>
    </list>
    <count count-mapping="[0]['cnt']">
        <sql>
            SELECT count(*) AS cnt
            FROM integration.integration_type
            WHERE :filters
        </sql>
    </count>

    <fields>
        <field id="id" domain="string">
            <select mapping="['code']"/>
            <filters>
                <eq filter-id="id">id=:id</eq>
            </filters>
        </field>
        <field id="name" domain="string">
            <select/>
        </field>

    </fields>
</query>
