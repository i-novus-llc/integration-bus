<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="status">

    <list count-mapping="#this.size()" result-mapping="#this">
        <rest method="GET">${integration.monitoring.url}/monitoringStatus</rest>
    </list>
    <unique>
        <rest method="GET">${integration.monitoring.url}/monitoringStatus/{id}</rest>
    </unique>
    <fields>
        <field id="id" domain="string">
            <select/>
            <filters>
                <eq filter-id="id"/>
            </filters>
        </field>
        <field id="name" domain="string">
            <select mapping="['name']"/>
            <filters>
                <eq filter-id="name"/>
            </filters>
        </field>
    </fields>
</query>
