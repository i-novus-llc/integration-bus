<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
      object-id="monitoring">

    <regions>
        <region place="single">
            <table query-id="monitoring">
                <columns>
                    <column text-field-id="uid" label="Идентификатор сообщения"/>
                    <column text-field-id="date_time_text" label="Дата\Время"/>
                    <column text-field-id="sender" label="Отправитель"/>
                    <column text-field-id="receiver" label="Получатель"/>
                    <column text-field-id="operation" label="Действие"/>
                    <column text-field-id="status.name" label="Статус"/>
                    <column text-field-id="comment" label="Комментарий"/>
                    <column text-field-id="error" label="Ошибка"/>
                </columns>
                <filters>
                    <row>
                        <input-text id="uid" label="Идентификатор"/>
                        <date-interval id="date_time" label="Дата\Время" date-format="DD.MM.YYYY HH:mm">
                            <default-value begin="`moment().set({hour:0,minute:0}).format('DD.MM.YYYY HH:mm')`"
                                           end="`moment().set({hour:23,minute:59}).format('DD.MM.YYYY HH:mm')`"/>
                        </date-interval>
                        <select id="status" label="Статус">
                            <options>
                                <option id="1" name="Создан"/>
                                <option id="2" name="Ошибка"/>
                                <option id="3" name="В очереди"/>
                                <option id="4" name="Удачно"/>
                            </options>
                        </select>
                    </row>
                    <row>
                        <input-text id="sender" label="Отправитель"/>
                        <input-text id="receiver" label="Получатель"/>
                        <input-text id="comment" label="Комментарий"/>
                    </row>
                </filters>
            </table>
        </region>
    </regions>

</page>
