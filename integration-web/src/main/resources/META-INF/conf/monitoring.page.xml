<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
      object-id="monitoring"
      name="Мониторинг">

    <regions>
        <region place="single">
            <table id="monitoring" name="Мониторинг" query-id="monitoring">
                <toolbar place="topRight" generate="filters, resize">
                    <button id="view" label="Просмотр">
                        <show-modal page-id="monitoring_form">
                            <pre-filters>
                                <eq field-id="uid" value="{uid}"/>
                                <eq field-id="sender" value="{sender}"/>
                                <eq field-id="receiver" value="{receiver}"/>
                                <eq field-id="operation" value="{operation}"/>
                            </pre-filters>
                        </show-modal>
                    </button>
                </toolbar>
                <columns>
                    <column text-field-id="uid" label="Идентификатор сообщения"/>
                    <column text-field-id="dateTime" label="Дата/Время">
                        <text format="date YYYY-MM-DD HH:mm:ss"/>
                    </column>
                    <column text-field-id="sender" label="Отправитель"/>
                    <column text-field-id="receiver" label="Получатель"/>
                    <column text-field-id="operation" label="Действие"/>
                    <column text-field-id="status" label="Статус"/>
                    <column text-field-id="comment" label="Комментарий"/>
                </columns>
                <filters>
                    <row>
                        <input-text id="uid" label="Идентификатор"/>
                        <date-interval id="dateTime" label="Дата/время" date-format="DD.MM.YYYY HH.mm"/>
                        <input-text id="sender" label="Отправитель"/>
                        <input-text id="receiver" label="Получатель"/>
                        <input-select id="status" type="single" label="Статус"
                                      query-id="status" label-field-id="name"/>
                        <input-text id="comment" label="Комментарий"/>
                    </row>
                </filters>
            </table>
        </region>
    </regions>
</page>
