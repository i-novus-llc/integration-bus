<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Настройка доступа">

    <form id="main" object-id="registry" query-id="sys_permission" default-values-query-id="permission_default">
        <fields>
            <select id="participant" label="Идентификатор участника" required="true"
                    query-id="participant" label-field-id="id" search-field-id="id" cleanable="false">
                <pre-filters>
                    <eq field-id="participant_method_id" value="{participant_method_id}"/>
                </pre-filters>
            </select>
            <input-text id="callback_url" label="URL Ответа"/>
            <checkbox id="sync" label="Синхронный" default-value="false"/>
        </fields>
    </form>

</simple-page>

