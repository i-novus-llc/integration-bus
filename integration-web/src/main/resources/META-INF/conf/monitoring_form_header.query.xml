<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="monitoring"
       name="monitoring">

    <unique>
        <rest method="GET" filters-separator="&amp;">${integration.registry.url}/service/header?{filters}</rest>
    </unique>

    <fields>
        <field id="id" domain="integer">
            <select mapping="['id']"/>
            <filters>
                <eq filter-id="id">id</eq>
            </filters>
        </field>

        <field id="uid" domain="string">
            <select mapping="['uid']"/>
            <filters>
                <eq filter-id="uid">uid={uid}</eq>
            </filters>
        </field>

        <field id="sender" domain="string">
            <select mapping="['sender']"/>
            <filters>
                <eq filter-id="sender">sender={sender}</eq>
            </filters>
        </field>

        <field id="receiver" domain="string">
            <select mapping="['receiver']"/>
            <filters>
                <eq filter-id="receiver">receiver={receiver}</eq>
            </filters>
        </field>

        <field id="operation" domain="string">
            <select mapping="['operation']"/>
            <filters>
                <eq filter-id="operation">operation={operation}</eq>
            </filters>
        </field>
    </fields>

</query>
