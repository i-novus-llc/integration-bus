<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <list count-mapping="#this.size()" result-mapping="#this">
        <rest method="GET">${integration.registry.url}/participants/list</rest>
    </list>
    <unique>
        <rest method="GET">${integration.registry.url}/participants/{id}</rest>
    </unique>
    <fields>
        <field id="id" domain="string">
            <select mapping="['code']"/>
            <filters>
                <eq filter-id="id"/>
            </filters>
        </field>
        <field id="name" domain="string">
            <select mapping="['name']"/>
            <filters>
                <eq filter-id="name"/>
            </filters>
        </field>

        <field id="participant_method_id" domain="integer">
            <filters>
                <eq filter-id="participant_method_id">excludeParticipantMethodId={participant_method_id}</eq>
            </filters>
        </field>
    </fields>
</query>

